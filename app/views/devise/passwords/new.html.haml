%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t('session.forgot_pass_header')
    %p.general-password-text= t('session.we_deliver_pass')
  %div.general-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.input :email, label: false, autofocus: true
      .text-center
        = f.button :submit, t('session.email_instructions_btn')
  .text-center
    = link_to t('session.cancel'), url_for(:back), class: 'in-gold-500 mb-20'
