.general-cart-item.divider-lg-bottom.mb-30
  %table.table
    %tr
      %td.col-half
        %span.in-grey-600= t('checkout.delivery.method')
      %td.col-half
        .form-group.radio.mt-0.mb-0
          %label.radio-label
            = radio_button_tag 'cart[delivery_method_id]', mobile_delivery_form.id, @cart.delivery_method == mobile_delivery_form, class: 'radio-input', hidden: true
            %span.radio-icon
            %span.radio-text= mobile_delivery_form.name
    %tr
      %td
        %span.in-grey-600= t('checkout.delivery.days')
      %td
        %span.font-16.fw-300= t('checkout.delivery.time', days_min: mobile_delivery_form.days_min, days_max: mobile_delivery_form.days_max)
    %tr
      %td
        %span.in-grey-600= t('checkout.delivery.price')
      %td
        %span.font-16.in-gold-500= number_to_currency(mobile_delivery_form.price)
